<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.compilesense.liuyi.prisma.fragment.PhotoFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/img_photo"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <org.opencv.android.JavaCameraView
            android:id="@+id/jc_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ibt_change_cameraID"
            android:src="@drawable/ic_sync_black_24dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="left|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:src="@drawable/ic_flash_on_black_24dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/ibt_capture"
            android:src="@drawable/ic_camera_black_100dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>
